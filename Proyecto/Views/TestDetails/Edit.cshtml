@model Proyecto.Models.ViewModels.TestDetailVM
@{
    ViewData["Title"] = "Editar Test Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>Editar Test Details</h2>
            </div>
            <div class="card-body">
                <form asp-controller="TestDetails" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="TestDetail.TestDetailId" />
                    <div class="form-group mb-2">
                        <label class="form-label">Test</label>
                        <select asp-for="TestDetail.TestId" asp-items="Model.TestList" class="form-select" id="testId">
                            <option disabled selected>--Seleccione un Test--</option>
                        </select>
                        <span asp-validation-for="TestDetail.TestId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Resultado</label>
                        <input class="form-control" asp-for="TestDetail.Resultado" />
                        <span asp-validation-for="TestDetail.Resultado" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Fecha</label>
                        <input class="form-control" asp-for="TestDetail.FechaRealizacion" />
                        <span asp-validation-for="TestDetail.FechaRealizacion" class="text-danger"></span>
                    </div>
                    <div class="d-grid column-gap-2 d-md-block offset-0 offset-md-3 offset-lg-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-download"></i>&nbsp; Actualizar
                        </button>
                        <a asp-controller="TestDetails" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-return-left"></i>&nbsp;Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#pacienteId').select2();
            $('#testId').select2();
        });
    </script>

}


