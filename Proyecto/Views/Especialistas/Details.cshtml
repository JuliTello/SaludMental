@model Proyecto.Models.Especialista
@{
    ViewData["Title"] = "Editar Especialista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>Detalle Especialista</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Especialistas" asp-action="Details" method="post">
                    <input type="hidden" asp-for="EspecialistaId" />
                    <div class="form-group mb-2">
                        <label class="form-label">Apellidos : @Model.LastName</label>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Nombres : @Model.FirstName</label>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Telefono : @Model.PhoneNumber</label>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Correo : @Model.Email</label>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Edad : @Model.Age</label>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Genero : @Model.Gender</label>                      
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Codigo Colegiatura: @Model.CodigoColegiatura</label>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Especialidad : @Model.Especialidad</label>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Informacion : @Html.Raw(@Model.Info)</label>
                    </div>
                    <div class="d-grid column-gap-2 d-md-block offset-0 offset-md-3 offset-lg-4">
                        <a asp-controller="Especialistas" asp-action="Tarjetas" class="btn btn-primary">
                            <i class="bi bi-arrow-return-left"></i>&nbsp;Regresar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
