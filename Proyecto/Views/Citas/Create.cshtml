@model Proyecto.Models.ViewModels.CitaVM
@{
    ViewData["Title"] = "Crear Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>Nueva Cita</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Citas" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label class="form-label">Especialista</label>
                        <select asp-for="Cita.EspecialistaId" asp-items="Model.EspecialistaList" class="form-select" id="especialistaId">
                            <option disabled selected>--Seleccione un Especialista--</option>
                        </select>
                        <span asp-validation-for="Cita.EspecialistaId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Fecha</label>
                        <input class="form-control" asp-for="Cita.SessionDate" />
                        <span asp-validation-for="Cita.SessionDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Estado</label>
                        <input class="form-control" asp-for="Cita.Estado" />
                        <span asp-validation-for="Cita.Estado" class="text-danger"></span>
                    </div>
                    <div class="d-grid column-gap-2 d-md-block offset-0 offset-md-3 offset-lg-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-download"></i>&nbsp; Guardar
                        </button>
                        <a asp-controller="Citas" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-return-left"></i>&nbsp;Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#especialistaId').select2();
        });
    </script>

}


