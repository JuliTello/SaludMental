@model Proyecto.Models.ViewModels.CitaVM
@{
    ViewData["Title"] = "Detalle Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>Detalles de la Cita</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Citas" asp-action="Details" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Cita.CitaId" />
                    <div class="row mb-2 border-bottom">
                        <div class="col-4 text-end fw-bold text-info">Especialista : </div>
                        <div class= "col-8" >@Model.Cita.Especialista.FirstName </div>
                    </div>
                    <div class="row mb-2 border-bottom">
                        <div class="col-4 text-end fw-bold text-info">Fecha : </div>
                        <div class="col-8">@Model.Cita.SessionDate</div>
                    </div>
                    <div class="row mb-2 border-bottom">
                        <div class="col-4 text-end fw-bold text-info">Estado : </div>
                        <div class="col-8">@Model.Cita.Estado</div>
                    </div>
                    <div class="d-grid column-gap-2 d-md-block offset-0 offset-md-3 offset-lg-4">
                        <a asp-controller="Citas" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-return-left"></i>&nbsp;Regresar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



